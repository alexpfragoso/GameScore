<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ifspsaocarlos.sdm.gamescore.view.RoletaActivity">

    <FrameLayout
        android:id="@+id/frameLayoutRoleta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="br.edu.ifspsaocarlos.sdm.gamescore.view.TelaMarcadoresActivity">

            <Button
                android:id="@+id/bt_girar"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:background="@android:color/holo_blue_dark"
                android:text="@string/girar"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="95dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="422dp"
                android:layout_height="196dp"
                app:srcCompat="@drawable/roleta"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="-19dp" />

            <ImageView
                android:id="@+id/iv_roletagif"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:background="@drawable/roletagif1"
                android:layout_marginLeft="36dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                app:layout_constraintRight_toLeftOf="@+id/frameLayout2"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0" />

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="72dp"
                android:layout_height="70dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginTop="68dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                android:layout_marginRight="82dp"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/tv_resultado_roleta"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@android:color/black"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    tools:layout_editor_absoluteX="253dp"
                    tools:layout_editor_absoluteY="301dp" />

            </FrameLayout>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
