<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ifspsaocarlos.sdm.gamescore.view.RoletaActivity">

    <FrameLayout
        android:id="@+id/frameLayoutRoleta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="br.edu.ifspsaocarlos.sdm.gamescore.view.TelaMarcadoresActivity">

            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="89dp"
                android:layout_marginBottom="266dp"
                android:layout_marginLeft="8dp"
                android:background="@android:color/background_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/frameLayout2"
                app:layout_constraintHorizontal_bias="0.558"
                app:layout_constraintVertical_bias="0.583">

                <TextView
                    android:id="@+id/tv_resultado_roleta"
                    android:layout_width="98dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:background="@android:color/black"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="253dp"
                    tools:layout_editor_absoluteY="301dp" />

            </FrameLayout>

            <Button
                android:id="@+id/bt_girar"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="127dp"
                android:background="@android:color/holo_blue_dark"
                android:text="Girar"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_roletagif" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="422dp"
                android:layout_height="196dp"
                app:layout_constraintHorizontal_bias="0.71"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/roleta" />

            <ImageView
                android:id="@+id/iv_roletagif"
                android:layout_width="129dp"
                android:layout_height="118dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="127dp"
                android:background="@drawable/roletagif1"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
